extends ../layouts/main.pug

block title
  title All Stories - StoryBooks

block body
  .container
    .section
      if stories
        .row
          each story in stories
            .col.s12.l6.xl4(style="padding-top: 50px;")
              .card.z-depth-3
                .card-image
                  a.btn-floating.btn-large.halfway-fab.left.waves-effect.waves-light
                      img(src=`${story.owner.image}`)
                  a.btn-floating.halfway-fab.waves-effect.waves-light.amber.darken-3
                    i.fa.fa-pencil
                .card-content.center-align
                  h5.story-title= story.title
                  br
                  p.story-body= truncate(stripTags(story.body), 140)
                .card-action.center-align
                  a.marginless(href=`/stories/show/${story.id}`) Read more

      else
        h2 No stories